<html lang="en">
	<head>
		{{>components/header}}
	</head>
	<body class="d-flex flex-column min-vh-100">
		<header>
			{{>components/topnav}}
		</header>
		<div class="container text-center my-5">
			<h1 class="display-1 ">{{title}}</h1>
			<div class="row py-3 border-bottom">
				<div class="col">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Goal title...">
						<div class="input-group-append">
							<button class="btn btn-outline-secondary" type="button">
								<i class="fa-solid fa-magnifying-glass"></i>Search </button>
						</div>
					</div>
				</div>
				<div class="col">
					<a href="/goals" class="btn btn-outline-secondary btn-lg" role="button">Progress</a>
					<button type="button" class="btn btn-lg btn-primary" disabled>Complete</button>
				</div>
				<div class="col">
				</div>
			</div>
		</div>
		<footer class="mt-auto">
			{{>components/footer}}
		</footer>
	</body>
</html>